{% extends 'layout.twig' %}

{% block content %}
    <div class="ui menu inverted">
        <div class="ui container">
            <div class="header item">
                <a href="{{ url('dashboard') }}">CashLog</a>
            </div>
            <div class="right menu">
                <a href="{{ url('signout') }}" class="item">Wyloguj się</a>
            </div>
        </div>
    </div>
    <div class="ui container">
        <h3 class="ui header">Potwierdź usunięcie zapisu operacji</h3>
        <div class="ui divider"></div>
        {% for alert in app.session.flashbag.get('error') %}
            <div class="ui message negative">{{ alert }}</div>
        {% endfor %}
        {{ form_start(form) }}
            {% if not form.vars.valid %}
                <div class="ui negative message">
                    {% for child in form.children %}
                        {% for error in child.vars.errors %}
                            <p>{{ error.message }}</p>
                        {% endfor %}
                    {% endfor %}
                </div>
            {% endif %}
            <div class="fields">
                <div class="field {% if not form.password.vars.valid %}error{% endif %}">
                    {{ form_widget(form.password) }}
                </div>
                <div class="field">
                    {{ form_widget(form.submit) }}
                </div>
            </div>
        {{ form_end(form) }}
    </div>
{% endblock %}